<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.ControllerMenu">
    <children>
        <ImageView fitHeight="720.0" fitWidth="1280.0">
            <image>
                <Image url="@../textures/bg1.png" />
            </image>
        </ImageView>
        <Button fx:id="buttonNewGame" layoutX="551.0" layoutY="407.0" mnemonicParsing="false" onAction="#switchToSceneCreator" prefHeight="60.0" prefWidth="179.0" text="New game" />
        <Button fx:id="buttonTesting" layoutX="551.0" layoutY="467.0" mnemonicParsing="false" onAction="#switchToTesting" prefHeight="60.0" prefWidth="179.0" text="Testing functions" />
        <Button fx:id="buttonMapGenerator" layoutX="551.0" layoutY="527.0" mnemonicParsing="false" onAction="#switchToLoading" prefHeight="60.0" prefWidth="179.0" text="Map generator" />
        <Button fx:id="buttonExitGame" layoutX="551.0" layoutY="587.0" mnemonicParsing="false" onAction="#exitGame" prefHeight="60.0" prefWidth="179.0" text="Exit" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" />
        <Text fx:id="nameOfTheGame" fill="#ddd8d8" layoutX="1.0" layoutY="196.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: Orelega One;" text="Game name" textAlignment="CENTER" wrappingWidth="1280.0">
            <font>
                <Font size="60.0" />
            </font></Text>
    </children>
</AnchorPane>
